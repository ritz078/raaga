{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@components/*": ["./components/*"],
      "@styles/*": ["./styles/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@config/*": ["./config/*"],
      "@workers/*": ["./workers/*"],
      "@enums/*": ["./enums/*"],
      "@reducers": ["./reducers"],
      "@typings/*": ["./typings/*"],
      "@assets/*": ["./assets/*"],
      "@controllers/*": ["./controllers/*"]
    },
    "lib": ["dom", "es2016", "webworker"]
  },
  "exclude": ["scripts", "static", "public", ".next"]
}
